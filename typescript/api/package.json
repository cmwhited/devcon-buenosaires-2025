{
  "name": "api",
  "version": "1.0.0",
  "description": "API layer for creating server-wallets, and performing transactions",
  "type": "module",
  "scripts": {
    "dev": "pnpm tsx --watch ./src/server.ts",
    "build": "tsdown",
    "start": "node ./dist/server.mjs",
    "format": "prettier . --write --list-different --ignore-path ../../.prettierignore",
    "format:check": "prettier . --check --ignore-path ../../.prettierignore",
    "lint": "eslint \"**/src/**/*.{ts,mjs}\"",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run typecheck; pnpm run lint; pnpm run format"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@privy-io/server-auth": "^1.32.5",
    "hono": "^4.10.6",
    "x402": "^0.7.3",
    "x402-fetch": "^0.7.3",
    "x402-hono": "^0.7.3",
    "@coinbase/cdp-sdk": "^1.38.6",
    "@fastify/cors": "^11.1.0",
    "@t3-oss/env-core": "^0.13.8",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "viem": "^2.39.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "tsdown": "^0.16.6"
  }
}
