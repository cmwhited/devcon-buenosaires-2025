{
  "name": "api",
  "version": "1.0.0",
  "description": "API layer for creating server-wallets, and performing transactions",
  "type": "module",
  "scripts": {
    "dev": "pnpm tsx --watch ./src/server.ts",
    "dev:mcp": "pnpm tsx --watch ./src/mcp/cli.ts",
    "build": "tsdown",
    "start": "node ./dist/server.mjs",
    "start:mcp": "node ./dist/mcp/cli.mjs",
    "test:pump": "pnpm tsx ./scripts/test-pump.ts",
    "test:hello": "pnpm tsx ./scripts/test-hello.ts",
    "test:swap": "pnpm tsx ./scripts/test-swap.ts",
    "format": "prettier . --write --list-different --ignore-path ../../.prettierignore",
    "format:check": "prettier . --check --ignore-path ../../.prettierignore",
    "lint": "eslint \"**/src/**/*.{ts,mjs}\"",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run typecheck; pnpm run lint; pnpm run format"
  },
  "bin": {
    "gas-station-mcp": "./dist/mcp/cli.mjs"
  },
  "dependencies": {
    "@coinbase/cdp-sdk": "^1.38.6",
    "@edgeandnode/ampersend-sdk": "workspace:^",
    "@fastify/cors": "^11.1.0",
    "@hono/node-server": "^1.19.6",
    "@privy-io/server-auth": "^1.32.5",
    "@t3-oss/env-core": "^0.13.8",
    "@uniswap/sdk-core": "^7.9.0",
    "@uniswap/v4-sdk": "^1.23.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "fastify": "^5.6.2",
    "fastmcp": "github:edgeandnode/fastmcp#6446ea7b56eb291a6d4d7321e4a41ff0aacba1ef",
    "hono": "^4.10.6",
    "viem": "^2.39.3",
    "x402": "^0.7.3",
    "x402-fetch": "^0.7.3",
    "x402-hono": "^0.7.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "tsdown": "^0.16.6"
  }
}
